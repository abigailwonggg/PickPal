<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp2Activity"
    android:background="@drawable/container_login">


    <!-- Ellipses on the bg -->
    <ImageView
        android:id="@+id/img_ellipse1"
        android:layout_width="257dp"
        android:layout_height="240dp"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="-63dp"
        android:layout_gravity="top|left"
        android:background="@drawable/img_ellipse1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/img_ellipse2"
        android:layout_width="600dp"
        android:layout_height="450dp"
        android:layout_marginLeft="-93dp"
        android:layout_marginTop="550dp"
        android:layout_gravity="top|left"
        android:background="@drawable/img_ellipse2"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/img_ellipse3"
        android:layout_width="284dp"
        android:layout_height="273dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="700dp"
        android:layout_gravity="top|left"
        android:background="@drawable/img_ellipse3"
        android:scaleType="centerInside" />

    <!-- PickPal Logo  -->
    <ImageView
        android:id="@+id/image_pick_pal_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="left"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="729dp"
        android:scaleType="centerInside"
        android:src="@drawable/pickpal_logo" />

    <!--Account Created Element-->
    <ImageView
        android:id="@+id/image_account_created"
        android:layout_width="460dp"
        android:layout_height="380dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="-20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/account_created" />

    <!-- Account Created Text -->
    <TextView
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="450dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:singleLine="true"
        android:text="Account"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#FFFFFFFF"
        android:textSize="40dp" />
    <TextView
        android:id="@+id/header2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="490dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:singleLine="true"
        android:text="successfully"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#FFFFFFFF"
        android:textSize="40dp" />
    <TextView
        android:id="@+id/header3"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="530dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:singleLine="true"
        android:text="created!"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#FFFFFFFF"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="590dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:text="Youâ€™re all set! Start creating polls and making choices with your pals!"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#CBCBE7"
        android:textSize="15sp"
         />
    
    <!--Login Button -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="221dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="660dp"
        android:background="@drawable/ca_login_button"
        android:gravity="center"
        android:text="Proceed to Login"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAllCaps="false" />



</FrameLayout>